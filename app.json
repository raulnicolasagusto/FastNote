{
  "expo": {
    "name": "FastNote",
    "slug": "FastNote",
    "version": "1.0.0",
    "scheme": "fastnote",
    "web": {
      "bundler": "metro",
      "output": "static"
    },
    "plugins": [
      "expo-router",
      "expo-web-browser",
      "expo-build-properties",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow FastNote to access your camera to scan text from images."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#ffffff",
          "defaultChannel": "default"
        }
      ],
      "expo-font",
      [
        "expo-quick-actions",
        {
          "androidIcons": {
            "voice_note": {
              "foregroundImage": "./assets/icon.png",
              "backgroundColor": "#4F46E5"
            }
          },
          "iosIcons": {
            "voice_note": "./assets/icon.png"
          }
        }
      ],
      "expo-build-properties",
      [
        "react-native-google-mobile-ads",
        {
          "androidAppId": "ca-app-pub-1467750216848197~2756187783",
          "iosAppId": "ca-app-pub-xxxxxxxx~xxxxxxxx"
        }
      ],
      "expo-localization",
      [
        "react-native-android-widget",
        {
          "widgets": [
            {
              "name": "NoteWidget",
              "label": "FastNote Widget",
              "description": "Display your note on the home screen",
              "minWidth": "320dp",
              "minHeight": "120dp",
              "targetCellWidth": 5,
              "targetCellHeight": 2,
              "previewImage": "./assets/widget-preview/note-widget-preview.png",
              "updatePeriodMillis": 1800000,
              "resizeMode": "horizontal|vertical",
              "widgetFeatures": "configuration_optional"
            }
          ]
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "tsconfigPaths": true
    },
    "locales": {
      "en": "./i18n/app-metadata/en.json",
      "es": "./i18n/app-metadata/es.json"
    },
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "assetBundlePatterns": [
      "assets/**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "package": "com.raulnicolasagusto.fastnote",
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#000000"
      },
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "fastnote"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ],
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.SCHEDULE_EXACT_ALARM",
        "android.permission.USE_EXACT_ALARM",
        "android.permission.WAKE_LOCK",
        "android.permission.VIBRATE",
        "com.google.android.gms.permission.AD_ID"
      ]
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "752b2e0a-6270-4cbe-bea5-fb35b8de1d1f"
      }
    },
    "owner": "raulnicolasagusto"
  }
}
